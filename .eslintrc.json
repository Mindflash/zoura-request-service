{
  "extends": "mindflash",
  "globals": {
    "expect": true,
    "sinon": true
  },
  "env": {
    "mocha": true,
    "node": true
  },
  "rules": {
    "indent": [2, 2, { "SwitchCase": 1, "VariableDeclarator": 1 }],
    "max-statements": [1, 10],
    "import/no-unresolved": [2, { "commonjs": true }],
    "object-curly-newline": 0
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".json"]
      }
    }
  },
  "plugins": [
    "import"
  ]
}
